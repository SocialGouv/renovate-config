{
  "enabled": true,
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":maintainLockFilesWeekly",
    ":masterIssue",
    ":preserveSemverRanges",
    ":prHourlyLimitNone",
    ":semanticCommits",
    ":timezone(Europe/Paris)"
  ],
  "masterIssueAutoclose": true,
  "node": {
    "supportPolicy": ["active"]
  },
  "packageRules": [
    {
      "groupName": "SocialGouv",
      "packagePatterns": [
        "^@socialgouv/"
      ]
    }
  ],
  "postUpdateOptions": [
    "npmDedupe", 
    "yarnDedupeHighest"
  ],
  "rangeStrategy": "bump",
  "labels": ["dependencies"]
}
