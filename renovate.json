{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":masterIssue",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":semanticCommits",
    "group:monorepos",
    "group:recommended",
    ":timezone(Europe/Paris)",
    "schedule:nonOfficeHours"
  ],
  "masterIssueAutoclose": true,
  "node": {
    "supportPolicy": ["active"]
  },
  "packageRules": [
    {
      "groupName": "SocialGouv",
      "packagePatterns": [
        "^@socialgouv/"
      ]
    }
  ],
  "postUpdateOptions": [
    "npmDedupe", 
    "yarnDedupeHighest"
  ],
  "rangeStrategy": "bump"
}
