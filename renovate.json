{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":masterIssue",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":semanticCommits",
    "group:allNonMajor",
    "group:monorepos",
    "group:recommended",
    ":timezone(Europe/Paris)",
    "schedule:nonOfficeHours"
  ],
  "node": {
    "supportPolicy": ["active"]
  },
  "postUpdateOptions": [
    "npmDedupe", 
    "yarnDedupeHighest"
  ],
  "rangeStrategy": "bump"
}
