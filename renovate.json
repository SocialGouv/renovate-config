{
  "enabled": true,
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":maintainLockFilesMonthly",
    ":masterIssue",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":timezone(Europe/Paris)"
  ],
  "masterIssueAutoclose": true,
  "node": {
    "supportPolicy": ["lts_latest"]
  },
  "packageRules": [
    {
      "groupName": "SocialGouv",
      "packagePatterns": ["^@socialgouv/"]
    },
    {
      "datasources": ["docker"],
      "packagePatterns": [
        "^registry.gitlab.factory.social.gouv.fr/socialgouv/docker/"
      ],
      "groupName": "socialgouv/docker images"
    },
    {
      "groupName": "kosko",
      "packagePatterns": [
        "^@kosko/",
        "^@kubernetes-models/",
        "^@socialgouv/kosko-charts$",
        "^kosko$"
      ]
    }
  ],
  "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"]
}
