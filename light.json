{
  "extends": [
    "github>SocialGouv/renovate-config",
    "schedule:monthly",
    "group:allNonMajor",
    "group:recommended",
    ":separateMajorReleases"
  ],
  "separateMinorPatch": true,
  "patch": {
    "automerge": true,
    "extends": ["schedule:earlyMondays", "group:all"]
  },
  "lockFileMaintenance": {
    "extends": ["group:all"],
    "commitMessageAction": "Update"
  }
}
