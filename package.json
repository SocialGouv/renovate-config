{
  "name": "renovate-config",
  "version": "0.0.0",
  "private": true,
  "description": "Our shared renovate config at SocialGouv",
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test": "run-p validate:*",
    "validate:default": "renovate-config-validator default.json",
    "//1": "other presets",
    "validate:light": "renovate-config-validator light.json",
    "validate:node-version": "renovate-config-validator gitlab-ci.json",
    "validate:socialgouv-data": "renovate-config-validator socialgouv-data.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SocialGouv/renovate-config.git"
  },
  "keywords": [
    "renovate"
  ],
  "author": "Fabrique numérique des Ministères Sociaux <dsi-incubateur@sg.social.gouv.fr> (https://incubateur.social.gouv.fr)",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/SocialGouv/renovate-config/issues"
  },
  "homepage": "https://github.com/SocialGouv/renovate-config#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "renovate": "^26.2.0"
  }
}
